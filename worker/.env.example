# Required: Supabase connection for downloading videos and uploading extracted audio
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Required: API key that clients must send in x-api-key header
API_KEY=your-secret-key-here

# Optional: Port for the worker HTTP server (default 3001)
PORT=3001

# Optional: Temporary directory for ffmpeg processing (default ./tmp)
TMP_DIR=./tmp

# Optional: Max concurrent extractions (default 2)
MAX_CONCURRENT=2
